						<xf:dependent>
							<xf:textbox name="image_url" value="{$badge.image_url}" />
							<dfn class="inputChoices-explain">{{ phrase('CMTV_Badges_image_url_explain') }}</dfn>
							<xf:if is="$badge.image_url">
