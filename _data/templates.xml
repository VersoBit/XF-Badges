						<xf:textbox name="fa_icon" value="{$badgeCategory.fa_icon}" fa="{$badgeCategory.fa_icon}" />
						<dfn class="inputChoices-explain">{{ phrase('CMTV_Badges_icon_code_explain') }}</dfn>
